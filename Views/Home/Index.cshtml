@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Dashboard</h3>
            </div>
            <div class="card-body">
                <p>Welcome to your AdminLTE Dashboard!</p>
                <p>Current User: @User.Identity.Name</p>
                <p>User Roles: @string.Join(", ", User.Claims.Where(c => c.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role").Select(c => c.Value))</p>
            </div>
        </div>
    </div>
</div>