@using AdminLTEApp.Models
@model UserMenuAssignmentViewModel
@{
    ViewData["Title"] = "Assign Menus to User: " + Model.UserName;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Assign Menus to User: @Model.UserName</h3>
            </div>
            <div class="card-body">
                <form asp-action="AssignMenus" method="post">
                    <input type="hidden" name="UserId" value="@Model.UserId" />

                    <div class="row">

                        @for (int i = 0; i < Model.Menus.Count; i++)
                        {
                            <input type="hidden" name="Menus[@i].Id" value="@Model.Menus[i].Id" />
                            <input type="hidden" name="Menus[@i].Name" value="@Model.Menus[i].Name" />
                            <input type="hidden" name="Menus[@i].Controller" value="@Model.Menus[i].Controller" />
                            <input type="hidden" name="Menus[@i].Action" value="@Model.Menus[i].Action" />

                            <!-- Hidden fallback for unchecked checkbox -->
                            <input type="hidden" name="Menus[@i].IsChecked" value="false" />

                            <!-- Actual checkbox -->
                            <input type="checkbox" name="Menus[@i].IsChecked" value="true" @(Model.Menus[i].IsChecked ? "checked" : "") />
                            <label>@Model.Menus[i].Name</label>
                        }

                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Save Assignments" class="btn btn-primary" />
                        <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Back to Users</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>