@using AdminLTEApp.Models
@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Role Management";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Role List</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary">Add New Role</a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td>@role.Description</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>
                                    <a asp-action="AssignMenus" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Assign Menus</a>
                                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>