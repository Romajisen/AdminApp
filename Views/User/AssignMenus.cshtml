@using AdminLTEApp.Models
@model UserMenuAssignmentViewModel
@{
    ViewData["Title"] = "Assign Menus to User: " + Model.UserName;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Assign Menus to User: @Model.UserName</h3>
            </div>
            <div class="card-body">
                <form asp-action="AssignMenus" method="post">
                    <input type="hidden" name="UserId" value="@Model.UserId" />

                    <div class="mb-3">
                        <button type="button" class="btn btn-info btn-sm" id="selectAll">Select All</button>
                        <button type="button" class="btn btn-secondary btn-sm" id="deselectAll">Deselect All</button>
                    </div>

                    <div class="row">
                        @for (int i = 0; i < Model.Menus.Count; i++)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input menu-checkbox" name="Menus[@i].IsChecked"
                                           value="true" id="menu_@Model.Menus[i].Id" @(Model.Menus[i].IsChecked ? "checked" : "") />
                                    <input type="hidden" name="Menus[@i].Id" value="@Model.Menus[i].Id" />
                                    <input type="hidden" name="Menus[@i].Name" value="@Model.Menus[i].Name" />
                                    <label class="form-check-label" for="menu_@Model.Menus[i].Id">@Model.Menus[i].Name</label>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Save Assignments" class="btn btn-primary" />
                        <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Back to Users</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#selectAll').on('click', function () {
                $('.menu-checkbox').prop('checked', true);
            });

            $('#deselectAll').on('click', function () {
                $('.menu-checkbox').prop('checked', false);
            });
        });
    </script>
}
